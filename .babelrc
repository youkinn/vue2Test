{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "> 1%",
            "last 2 versions",
            "iOS >= 7",
            "Android >= 2.3",
            "IE >= 7"
          ]
        }
      }
    ],
    "stage-2"
  ],
  "plugins": [
    "transform-runtime",
    ["component", [{ "libraryName": "mint-ui", "style": true }]]
  ],
  "env": {
    "test": {
      "presets": ["env", "stage-2"],
      "plugins": ["istanbul"]
    }
  }
}
